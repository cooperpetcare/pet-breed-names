{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "noImplicitAny": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*",
    "index.d.ts",
  ],
  "compileOnSave": false,
}
